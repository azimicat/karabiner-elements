{
    "title": "melgeek",
    "rules": [
        {
            "description": "[left_command] to [left_option]",
            "manipulators": [
                {
                    "from": {
                        "key_code": "left_command"
                    },
                    "to": [
                        {
                            "key_code": "left_option"
                        }
                    ],
                    "type": "basic"
                }
            ]
        },
        {
            "description": "[left_option] to [left_command]",
            "manipulators": [
                {
                    "from": {
                        "key_code": "left_option"
                    },
                    "to": [
                        {
                            "key_code": "left_command"
                        }
                    ],
                    "type": "basic"
                }
            ]
        },
        {
            "description": "[shift+esc] to [~]",
            "manipulators": [
                {
                    "from": {
                        "key_code": "escape",
                        "modifiers": {
                            "mandatory": [
                                "right_shift",
                                "left_shift"
                            ],
                            "optional": [
                                "any"
                            ]
                        },
                        "to": [
                            {
                                "key_code": "escape",
                                "modifiers": {
                                    "mandatory": [
                                        "left_shift",
                                        "function"
                                    ]
                                }
                            }
                        ],
                        "type": "basic"
                    }
                }
            ]
        }
    ]
}
