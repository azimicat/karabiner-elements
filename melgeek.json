{
    "title": "melgeek",
    "rules": [
        {
            "description": "[delete_forward] to [end]",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "delete_forward"
                    },
                    "to": [
                        {
                            "key_code": "end"
                        }
                    ]
                }
            ]
        },
        {
            "description": "[left_command] to [left_option]",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "left_command"
                    },
                    "to": [
                        {
                            "key_code": "left_option"
                        }
                    ]
                }
            ]
        },
        {
            "description": "[left_option] to [left_command]",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "left_option"
                    },
                    "to": [
                        {
                            "key_code": "left_command"
                        }
                    ]
                }
            ]
        },
        {
            "description": "[right_shift+esc] to [~]",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "escape",
                        "modifiers": {
                            "mandatory": [
                                "right_shift"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "escape",
                            "modifiers": [
                                "left_shift",
                                "fn"
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "description": "[left_shift+esc] to [~]",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "escape",
                        "modifiers": {
                            "mandatory": [
                                "left_shift"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "escape",
                            "modifiers": [
                                "left_shift",
                                "fn"
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}
